<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shedule_appointment">

        <TextView
            android:id="@+id/name_pet"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:text="@string/name_pet"
            android:textSize="18sp"
            app:flow_verticalAlign="top"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:ems="50"
            android:hint="@string/type"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_pet" />

        <TextView
            android:id="@+id/ser"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:text="@string/service"
            android:textSize="18sp"
            app:flow_verticalAlign="top"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/ser_text"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:ems="50"
            android:hint="@string/type"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ser" />

        <TextView
            android:id="@+id/des"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:text="@string/descr"
            android:textSize="18sp"
            app:flow_verticalAlign="top"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ser_text"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/desc_text"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:ems="50"
            android:hint="@string/type"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/des" />

        <TextView
            android:id="@+id/remi"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:text="@string/remind"
            android:textSize="18sp"
            app:flow_verticalAlign="top"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_text"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/remind_text"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:ems="50"
            android:hint="@string/type"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remi" />

        <EditText
            android:id="@+id/calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:ems="6"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cal" />

        <EditText
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:ems="6"
            android:inputType="time"
            app:layout_constraintStart_toEndOf="@+id/calendar_text"
            app:layout_constraintTop_toBottomOf="@+id/tim" />

        <TextView
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="23dp"
            android:text="@string/calendar"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remind_text" />

        <TextView
            android:id="@+id/tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="22dp"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cal"
            app:layout_constraintTop_toBottomOf="@+id/remind_text" />

        <Button
            android:id="@+id/btnSaveDate"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/save"
            android:backgroundTint="#FFBA5C"
            app:cornerRadius="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>